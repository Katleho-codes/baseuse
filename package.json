{
  "name": "baseuse",
  "displayName": "baseuse",
  "description": "Baseuse is a VS Code extension that scans your CSS, HTML, and JavaScript for web features and functions, checks their browser support against a baseline, and provides inline guidance, tooltips, and quick fixes.",
  "version": "0.0.1",
  "publisher": "baseuse",
  "type": "module",
  "engines": {
    "vscode": "^1.104.0"
  },
  "icon": "resources/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:html",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baseuse.analyzeBaseline",
        "title": "Baseline Analyze"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "baseuse",
          "title": "Baseuse",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {}
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "web-features": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Katleho-codes/baseuse.git"
  },
  "keywords": [
    "baseline"
  ],
  "author": "katleho mabala",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Katleho-codes/baseuse/issues"
  },
  "homepage": "https://github.com/Katleho-codes/baseuse#readme"
}